%h2 Request Fund Withdrawal
= semantic_form_for @fund_withdraw_request do |f|
  = f.inputs do
    = f.semantic_errors
    = f.input :bankaccount, :label => 'Bank Details', :as => :select, :collection => @bank_accounts, :include_blank => true, :label_method => :name_account, :required => true
    = f.input :amount, :label => 'Amount', :required => true
    = f.input :currency, :label => 'Currency', :as => :select, :collection => @currencies, :include_blank => false, :required => true
    = f.input :message, :label => 'Message', :required => false
    = f.commit_button :button_html => { :value => "Request Fund Withdrawal"}
