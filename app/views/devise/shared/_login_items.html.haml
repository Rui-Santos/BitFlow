%ul.nav
  - if user_signed_in?
    %li 
      Welcome
      = link_to(current_user.email, user_path(current_user))
      = (admin) if current_user.admin?
    %li= link_to 'Sign out', signout_url
  - else
    = content_tag(:li, link_to("Sign up", new_user_registration_path)) if controller_name != 'registrations'
    = content_tag(:li, link_to("Sign in", new_user_session_path)) if controller_name != 'sessions'
