%h2 #{@bankaccount.new_record? ? 'Add' : 'Edit'} Bank Account
= semantic_form_for @bankaccount do |f|
  = f.inputs do
    = f.semantic_errors
    = f.input :name, :label => 'Bank Name', :required => true
    = f.input :number, :label => 'Account Number', :required => true
    = f.commit_button :button_html => { :value => "#{@bankaccount.new_record? ? 'Add' : 'Edit'} Bank Account"}