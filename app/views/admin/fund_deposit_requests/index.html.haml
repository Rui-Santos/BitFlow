= render 'form'
#admin-fund-deposit_request
  %table
    %caption
      %em Manage Fund Deposits
    %thead
      %tr
        %th User Email
        %th Bank Name
        %th Account Number
        %th Amount
        %th Net Amount
        %th Currency
        %th Requested at
        %th Last updated at
        %th.last
    %tbody
      - @fund_deposit_requests.each do |fund_deposit_request|
        %tr{class: cycle("odd", "even")}
          %td= fund_deposit_request.user.email
          %td= fund_deposit_request.bankaccount.name
          %td= fund_deposit_request.bankaccount.number
          %td= fund_deposit_request.amount
          %td= fund_deposit_request.net_amount
          %td= fund_deposit_request.currency
          %td= fund_deposit_request.created_at
          %td= fund_deposit_request.updated_at
          %td= link_to('Confirm', "/admin/fund_deposit_requests/#{fund_deposit_request.id}", :confirm => 'Are you sure to confirm this fund deposit request?', :method => :put) if fund_deposit_request.status == 'pending'
