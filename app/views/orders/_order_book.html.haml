%table
  %caption
    %em #{item_type}s Book
  %thead
    %tr
      %th Last updated at
      %th #{item_type}s
      %th Limit Price
      %th Status
      %th.last Actions
  %tbody
    - items.each do |item|
      %tr{:class => cycle("odd", "even")}
        %td #{item.updated_at}
        %td #{item.amount} BTC
        %td #{item.price}
        %td #{item.active? ? "#{item.amount_remaining} BTC left": item.status}
        %td= link_to('Cancel', item, method: :delete, confirm: "Are you sure to cancel this #{item_type}?") if item.active?
= paginate items