= semantic_form_for @bid do |f|
  = f.inputs "#{@bid.new_record? ? 'New' : 'Edit'} Bid" do
    = f.semantic_errors
    = f.input :amount
    = f.input :order_type, :as => :radio, :collection => [Order::Type::LIMIT, Order::Type::MARKET] if @bid.new_record?
    = f.input :price, :label => 'Price (in USD)'
    = f.commit_button
