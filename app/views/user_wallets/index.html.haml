#user-wallet
  %table
    %caption
      %em My Wallet
    %thead
      %tr
        %th Name
        %th Bitcoin Address
        %th Balance
        %th Created at
        %th.last Updated at
    %tbody
      - unless @user_wallet.nil?
        %tr{class: cycle("odd", "even")}
          %td= @user_wallet.name
          %td= @user_wallet.address
          %td= @user_wallet.balance.to_f
          %td= @user_wallet.created_at
          %td= @user_wallet.updated_at
  %table
    %caption
      %em My BTC Fund History
    %thead
      %tr
        %th Date
        %th Description
        %th BTC Change
        %th Status
        %th.last Notes
    %tbody
      - @fund_transaction_details.each do |fund_transaction_detail|
        %tr{class: cycle("odd", "even")}
          %td= fund_transaction_detail.created_at
          %td= description fund_transaction_detail
          %td= btc_change fund_transaction_detail
          %td= fund_transaction_detail.status
          %td= btc_notes fund_transaction_detail
      %tr{class: cycle("odd", "even")}
        %td= link_to 'Send BTC Payment', new_btc_withdraw_request_path	     