#user-order-book
  %table
    %caption
      %em My Order Book
    %thead
      %tr
        %th Last updated at
        %th Type
        %th Price
        %th Amount
        %th Status
        %th.last Commission
    %tbody
      - orders.each do |order|
        %tr{class: cycle("odd", "even")}
          %td #{order["updated_at"]}
          %td #{order["type"]}
          %td #{order["price"].to_f}
          %td #{order["amount"].to_f} 
          %td #{order["status"]} 
          %td #{Commission::AMOUNT} USD
      %tr{class: cycle("odd", "even")}
        %td{colspan: 7, class: "more"}= link_to 'more...', orders_url
