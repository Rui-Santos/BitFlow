!!! XML
!!! 5
%html
  %head
    %title Bitflow
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body.bp.two-col
    #container
      %hr.space
      #header
        .container
          .span-18.logo &nbsp;
          .span-6.last= render '/devise/shared/login_items'
      %hr
      #sidebar
        .container
          links
      #content
        = render '/shared/authenticated_menu_items'

        - flash.each do |key, message|
          = content_tag(:div, message, :class => "flash #{key}")

        .container
          = yield

      %hr
      #footer