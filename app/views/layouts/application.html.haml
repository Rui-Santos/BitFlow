!!! 5
%html
  %head
    %title Bitflow
    = stylesheet_link_tag 'screen.css', 'buttons.css', 'link_icons.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body.bp.two-col
    #container
      #header
        = render '/devise/menu/login_items'

      #sidebar
        .container
      #content
        .container
          - [:notice, :alert, :error].each do |flash_type|
            = content_tag(:p, :class => flash_type.to_s) { flash[flash_type] } if flash[flash_type]
        .container
          = yield

      #footer