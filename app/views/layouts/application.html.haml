!!! 5
%html
  = render 'layouts/head'

  %body.bp.two-col
    #container
      %hr.space
      #header
        .container
          .span-16
            %div
              = link_to '', root_url, class: 'logo'
            .span-8
              .quiet 24/7 Secure Bitcoin Exchange
          .span-8.last
            = render '/devise/shared/login_items'
      %hr
      #sidebar
        = render '/shared/sidebar'
      #content
        = render '/shared/authenticated_menu_items'

        - flash.each do |key, message|
          = content_tag(:div, message, :class => "flash #{key}") unless key == :recaptcha_error 

        = yield

      %hr
      #footer
        %center
          %ul
            %li= link_to 'Latest Updates', latest_updates_path 
            %li= link_to 'About Us', about_us_path 
            %li= link_to ' FAQ', faq_path
            %li= link_to ' Contact Us', contact_us_path
            %li= link_to 'Trading API', trading_api_path 
            %li= link_to ' Affiliate Program', affiliate_program_path
            %li= link_to ' Terms of Use', terms_of_use_path
            %li= link_to ' Privacy Policy', privacy_policy_path

  = javascript_include_tag :defaults
  = yield(:javascript)
