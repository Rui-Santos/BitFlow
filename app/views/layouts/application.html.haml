!!! XML
!!! 5
%html
  %head
    %title Bitflow
    = stylesheet_link_tag 'formtastic.css', 'screen.css', 'formtastic_changes.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery-ui/smoothness/jquery-ui-1.8.14.custom.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag

  %body.bp.two-col
    #container
      %hr.space
      #header
        .container
          .span-18
            %div
              = link_to '', root_url, class: 'logo'
            .span-10
              .quiet 24/7 Secure Bitcoin Exchange
              = render '/shared/market_price_ticker'
          .span-6.last
            = render '/devise/shared/login_items'
      %hr
      #sidebar
        = render '/shared/sidebar'
      #content
        = render '/shared/authenticated_menu_items'

        - flash.each do |key, message|
          = content_tag(:div, message, :class => "flash #{key}")

        = yield

      %hr
      #footer

  = javascript_include_tag :defaults
  = yield(:javascript)
